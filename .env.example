# Environment
ENVIRONMENT=dev  # or sbx, test, qa, prod

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
MAX_TOKENS=500

# API Authentication
API_KEY=your-api-key-here

# PostgreSQL Configuration
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=your-database-name
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password

# RAG Settings
MAX_CONTEXT_DOCUMENTS=3

# AWS CDK Configuration (for deployment)
CDK_DEFAULT_ACCOUNT=your-aws-account-id  # Optional
CDK_DEFAULT_REGION=us-west-2  # Optional

# Langfuse Monitoring (OpenAI Wrapper)
LANGFUSE_PUBLIC_KEY=pk-lf-...  # From Langfuse dashboard
LANGFUSE_SECRET_KEY=sk-lf-...  # From Langfuse dashboard
LANGFUSE_HOST=https://cloud.langfuse.com  # For US region, use https://us.cloud.langfuse.com
LANGFUSE_RELEASE=1.0.0  # Optional, for version tracking
LANGFUSE_DEBUG=false  # Optional, enable for development
